<Float>:
    size:root.width, root.height
    word1:word1
    word2:word2
    merged:merged

    Label:
        text:'Word 1:'
        pos_hint:{'y':2/3}
        size_hint:1/2, 1/3
        font_size:40

    TextInput:
        id:word1
        multiline:False
        pos_hint:{'x':1/2,'y':2/3}
        size_hint:0.5, 1/3
        font_size:50
        text:'First'

    Label:
        text:'Word 2:'
        pos_hint:{'y':1/3}
        size_hint:1/2, 1/3
        font_size:45

    TextInput:
        id:word2
        multiline:False
        pos_hint:{'x':1/2,'y':1/3}
        size_hint:0.5, 1/3
        font_size:50
        text:'Second'

    Button:
        text:'Merge!'
        size_hint:0.2,1/3
        pos_hint:{'x':0.8}
        on_press:root.clicked()
        background_color:(0.5,0,0,0.8)
        font_size:45

    Label:
        id:merged
        text:'Merged Word'
        pos_hint:{'x':0,'y':0}
        size_hint:0.8,1/3
        font_size:45
