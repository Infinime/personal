<MainGrid>
    
    textin: textin

    GridLayout:
        rows:2
        size:root.width, root.height

        TextInput:
            id:textin
            size:root.width, root.height/3
            font_size:70

        GridLayout:
            cols:5

            Button:
                text:'1'
                on_press: root.writer(1)
            Button:
                text:'2'
                on_press: root.writer(2)
            Button:
                text:'3'
                on_press: root.writer(3)
            Button:
                text:'AC'
                on_press: root.writer('ac')
            Button:
                text:'<---'
                on_press: root.writer('bksp')
            Button:
                text:'4'
                on_press: root.writer(4)
            Button:
                text:'5'
                on_press: root.writer(5)
            Button:
                text:'6'
                on_press: root.writer(6)
            Button:
                text:'+'
                on_press: root.writer('+')
            Button:
                text:'-'
                on_press: root.writer('-')
            Button:
                text:'7'
                on_press: root.writer(7)
            Button:
                text:'8'
                on_press: root.writer(8)
            Button:
                text:'9'
                on_press: root.writer(9)
            Button:
                text:'*'
                on_press: root.writer('*')
            Button:
                text:'/'
                on_press: root.writer('/')
            Button:
                text:'.'
                on_press: root.writer('.')
            Button:
                text:'0'
                on_press: root.writer(0)
            Button:
                text:'E'
                on_press: root.writer('E')
            Button:
                text:'%'
                on_press: root.writer('%')      
                
            Button:
                text:'='
                on_press: root.equals('eq')